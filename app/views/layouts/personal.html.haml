!!! 5
%html
  %head
    %title Personal
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag "application", :medial => "all", 'data-turbolinks-track' => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

    %body{:class => "#{controller.controller_name}"}
      %div{:class => "navbar navbar-default navbar-fixed-top"}
        %div{:class => "container"}
          %div{:class => "navbar-header"}
            %button{:type => "button", :class => "navbar-toggle collapsed", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
              %span{:class => "icon-bar"}
              %span{:class => "icon-bar"}
              %span{:class => "icon-bar"}
            %a{:class => "navbar-brand", :href => "#"} Personal Web Application 
          %div{:class => "navbar-collapse collapse", :style=> "height: 1px;"}
            %ul{:class => "nav navbar-nav"}
              %li
                = link_to 'Keychains', keychains_path
              %li
                = link_to 'New Keychain', new_keychain_path
            %ul{:class => "nav navbar-nav navbar-right"}
              %li
                = link_to 'Logout', destroy_user_session_path, :method => :delete
      %div{:class => "container app_content"}
        %div{:class => 'col-md-6 col-md-offset-3'}
          = render(:partial => "shared/flash_messages")
          = yield
